{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<section class="content-banner blog-banner">
  {{#if tag.image}}
  <div class="content-banner-bg" style="background-image: url({{tag.image}})"></div>
  {{else}}
  <div class="content-banner-bg"></div>
  {{/if}}
  <div class="content-banner-hero">
    <h1>{{tag.name}}</h1>
    <p>Tag</p>
  </div>
</section>

<section class="content-stripe content-stripe-white blog-stripe blog-posts-stripe" id="blog-posts"><div class="container">
{{! The tag below includes the post loop - partials/loop.hbs }}
{{> "loop"}}
</div></section>
